@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "/Areas/Identity/Views/Shared/_LoginLayout.cshtml";
}

<style>
    .bg-password-image {
        background-image: url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTxe-F1-p8QLpXyDOn9t3k90x_3v8zqzQl3xA&usqp=CAU);
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
        @* background-color: black; *@
    }
</style>
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Quên Mật Khẩu?</h1>
                                <p class="mb-4">Hãy Nhập Email Dể Lấy Lại Mật Khẩu!</p>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>    
                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-user" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Gửi</button>
                            </form>
                            <hr>

                            <div class="text-center">
                                <a class="small" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Đã có tài khoản? Đăng Nhập</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
